<!DOCTYPE html>
<html>
<head>
  <title>Ranker</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<p id="back_link_box" style="float:left"><%= link_to 'Home', root_path %></p>

<div id="user_login_box" style="float:right">
<% if user_signed_in? -%>
    You are logged in as <%= current_user.email %>. |
    <%= link_to 'My info', edit_user_registration_path %> |
    <%= link_to 'Sign out', destroy_user_session_path %>
  <% else %>
    <%= link_to "Login", new_user_session_path %> | <%= link_to "Register", new_user_registration_path %>
<% end -%>
</div>
<!-- % if admin_signed_in? -% >
  <div id="admin_login_box" style="float:left">
    < %= current_admin.email % > |
    < %= link_to 'Admin section', admins_path % > |
    < %= link_to 'Sign out', destroy_admin_session_path % >
  </div>
< % end % -->
<div style="clear:both"></div>

<%- flash.each do |name, msg| -%>
  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<%- end -%>

<%= yield %>

</body>
</html>
